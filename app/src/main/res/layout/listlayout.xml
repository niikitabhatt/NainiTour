<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/aboutpaddingleft"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/activityname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height1"
        android:textStyle="bold"
        android:text="activityname"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize2"
        android:textAlignment="center"/>
    <ImageView
        android:id="@+id/activityimage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageheight"
        android:src="@drawable/nainilake"/>
    <TextView
        android:id="@+id/activitydescription"
        android:layout_marginTop="@dimen/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="@dimen/abouttextsize"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/aboutpaddingleft"
        android:textStyle="italic"/>

</LinearLayout>